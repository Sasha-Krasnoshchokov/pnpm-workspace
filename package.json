{
  "name": "pnpm-workspace",
  "version": "1.0.0",
  "description": "Production ready Monorepo Starter Kit",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm -r --parallel run dev",
    "dev:client": "pnpm --filter client run dev",
    "dev:server": "pnpm --filter server run dev",
    "lint": "pnpm -r run lint --if-present",
    "test": "pnpm -r run test --if-present",
    "build": "pnpm -r run build",
    "type-check": "pnpm -r --filter \"!@repo/tsconfig\" exec tsc --noEmit",
    "clean": "pnpm -r exec rm -rf node_modules dist .turbo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "typescript": "catalog:"
  }
}
