{
  "name": "pnpm-workspace",
  "version": "1.0.0",
  "description": "Production ready Monorepo Starter Kit",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "pnpm --if-present -r run lint",
    "test": "pnpm --if-present -r run test",
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r --if-present typecheck",
    "dev": "pnpm -r --parallel run dev",
    "dev:client": "pnpm --filter client run dev",
    "dev:server": "pnpm --filter @repo/server dev",
    "dev:server:watch": "pnpm --filter @repo/server dev:watch",
    "build:server": "pnpm --filter @repo/server build",
    "docker:build": "docker build --target development -t repo-server:dev -f apps/server/Dockerfile .",
    "docker:run": "docker run -p 3210:3210 repo-server:dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "typescript": "catalog:"
  }
}
